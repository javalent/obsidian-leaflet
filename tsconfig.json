{
    "compilerOptions": {
        "baseUrl": ".",
        "sourceMap": true,
        "module": "esnext",
        "target": "es6",
        "allowJs": true,
        "noImplicitAny": true,
        "moduleResolution": "node",
        "importHelpers": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "lib": ["dom", "esnext", "scripthost", "es2019"]
    },
    "include": [
        "**/src/*",
        "**/layer/*",
        "**/map/*",
        "**/modals/*",
        "**/settings/*",
        "**/utils/*"
    ]
}
